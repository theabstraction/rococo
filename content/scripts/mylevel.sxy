(function AddSector5 (ISectors sectors) -> :
	(Int64 flags = 0) // 0x0 None

	(IString wall = "!textures/hv/wall_6.jpg")
	(IString floor = "!textures/hv/floor_1.jpg")
	(IString ceiling = "!textures/hv/floor_15.jpg")

	(sectors.AddVertex -20.000000 10.000000)
	(sectors.AddVertex -18.000000 8.000000)
	(sectors.AddVertex -18.000000 4.000000)
	(sectors.AddVertex -20.000000 2.000000)
	(sectors.AddVertex -24.000000 2.000000)
	(sectors.AddVertex -26.000000 4.000000)
	(sectors.AddVertex -26.000000 8.000000)
	(sectors.AddVertex -24.000000 10.000000)

	(sectors.Create 200 1400 flags wall floor ceiling)
)

