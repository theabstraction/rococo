(using Sys.Reflection)
(using Sys.Type)

(function AppendRandomAtomicFrom (IExpression s)(IStringBuilder sb)-> :
	(Int32 maxIndex = ((s.ChildCount) - 1))
	(Int32 index = (Sys.Random.AnyInt 0 maxIndex))
	(IExpression atomic = (s.Child index))
	(#build sb atomic.Text)
)

(function AppendRandomBritishSurname (IStringBuilder sb) -> :
