(Insert
	(Path "!tests/greatsex.scheme.sexml")
)

(Frame
	(Colour.Container.Background Transparent)
)

(Frame.ClientArea
	(Colour.Container.Background DarkRed)
)

(Div 
	(Panel.Description "OutermostDiv")
	(Panel.Layout TopToBottom)
	([] Panel.Expand H V)
	(#Recti Panel.Padding 10 10 10 10)
	:
	
	(Label
		(Text "Options")
		(#Recti Panel.Padding 0 0 0 0)
		(Panel.FixedHeight 30)
		([] Panel.Expand H)
	)
	
	(Div 
		(Panel.Description "OptionsTabs")
		(Panel.Layout LeftToRight)
		([] Panel.Expand H)
		(Panel.FixedHeight 30)
		(#Recti Panel.Padding 0 0 0 0)
		:
		
		(Button
			(Panel.Description "Cancel-Button")
			(#Vec2i Panel.Span 60 30)
			(#Recti Panel.Padding 236 0 0 4)
			(Text Gameplay)	
		)
		
		(Button
			(#Vec2i Panel.Span 60 30)
			(#Recti Panel.Padding 4 0 0 4)
			(Text Graphics)
		)
		
		(Button
			(Panel.Description "Cancel-Button")
			(#Vec2i Panel.Span 60 30)
			(#Recti Panel.Padding 236 0 0 4)
			(Text Sound)	
		)
	)
	
	(Div
		(Panel.Description "OptionsTabScreen")
		(Panel.Layout LeftToRight)
		([] Panel.Expand H V)
		(Colour.Container.Background DarkBlue)
	)
)
