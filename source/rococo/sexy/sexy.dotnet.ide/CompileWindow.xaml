<Window x:Class="SexyDotNet.CompileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SexyDotNet - Compilation and Execution Status" Height="480" Width="640" MinWidth="640" MinHeight="480" Icon="/sex.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "320"></RowDefinition>
            <RowDefinition Height = "*"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Grid.Row="0">
            <TextBlock Name="textBlock" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
        </ScrollViewer>
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Name="textSourceFilename" HorizontalAlignment="Stretch" Height="20"></TextBlock>
            <TextBlock Name="textSourceSpecimen" HorizontalAlignment="Stretch" Height="20"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
